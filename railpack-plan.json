{
  "phases": {
    "prepare": {
      "cmds": [
        "mkdir -p /usr/local/etc/php/conf.d",
        "mkdir -p /conf.d/"
      ]
    },
    "install": {
      "cmds": [
        "install-php-extensions ctype curl dom fileinfo filter hash mbstring openssl pcre pdo session tokenizer xml grpc",
        "composer install --optimize-autoloader --no-scripts --no-interaction",
        "npm ci",
        "npm prune --omit=dev --ignore-scripts"
      ]
    },
    "build": {
      "cmds": [
        "npm run build",
        "mkdir -p storage/framework/{sessions,views,cache,testing} storage/logs bootstrap/cache && chmod -R a+rw storage",
        "php artisan config:cache",
        "php artisan event:cache",
        "php artisan route:cache",
        "php artisan view:cache"
      ]
    },
    "deploy": {
      "cmds": [
        "/start-container.sh"
      ]
    }
  }
}



