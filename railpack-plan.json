{
  "phases": {
    "setup": {
      "packages": {
        "php": "8.2",
        "node": "22"
      }
    },
    "build": {
      "cmds": [
        "install-php-extensions ctype curl dom fileinfo filter hash mbstring openssl pcre pdo session tokenizer xml grpc",
        "composer install --optimize-autoloader --no-scripts --no-interaction",
        "npm ci",
        "npm run build",
        "php artisan config:cache",
        "php artisan route:cache",
        "php artisan view:cache"
      ]
    },
    "deploy": {
      "cmds": [
        "php artisan serve --host=0.0.0.0 --port=${PORT}"
      ]
    }
  }
}


